<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sha7na" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Sha7na" parent="Base.Theme.Sha7na" />

    <style name="MyAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">

        <!-- Background -->
        <item name="android:background">@drawable/dialog_background</item>

        <!-- font-family-->
        <item name="android:fontFamily">@font/lalezar</item>

        <!-- âœ… List item text color -->
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleText</item>

        <!-- Buttons (Cancel / OK / etc.) -->
        <item name="buttonBarNegativeButtonStyle">@style/DialogNegativeButtonText</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButtonText</item>
    </style>

    <!-- Title style -->
    <style name="DialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lalezar</item>
    </style>

    <!-- List / body style -->
    <style name="DialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#7F4FCE</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/lalezar</item>
    </style>

    <!-- Button style (Cancel / OK etc.) -->
    <style name="DialogPositiveButtonText" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:radius">5dp</item>
    </style>
    <style name="DialogNegativeButtonText" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:radius">5dp</item>

    </style>
</resources>